{
    "name": "react-bypass",
    "version": "0.1.0",
    "description": "Element bypass for React.",
    "keywords": [
        "react",
        "slot",
        "bypass"
    ],
    "type": "module",
    "homepage": "https://github.com/rortan134/react-bypass/",
    "bugs": {
        "url": "https://github.com/rortan134/react-bypass/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/rortan134/react-bypass.git"
    },
    "license": "MIT",
    "author": "GSMT <gsmt.dev@gmail.com>",
    "exports": {
        "import": {
            "types": "./dist/index.d.mts",
            "default": "./dist/index.mjs"
        },
        "require": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "main": "./dist/cjs/index.js",
    "module": "./dist/es/index.mjs",
    "types": "./dist/cjs/index.d.ts",
    "files": [
        "dist",
        "*.md"
    ],
    "scripts": {
        "build": "bunchee",
        "clean": "find . -name node_modules -o -name .next -o -name .turbo -o -name dist -type d -prune | xargs rm -rf",
        "dev": "bunchee --watch",
        "format": "prettier --write .",
        "test": "vitest run",
        "watch": "vitest watch",
        "test:e2e": "playwright test"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --quiet --fix --cache",
            "prettier --write"
        ]
    },
    "dependencies": {
        "@radix-ui/react-slot": "^1.1.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.45.2",
        "@testing-library/dom": "^10.3.2",
        "@testing-library/jest-dom": "^6.4.6",
        "@testing-library/react": "^16.0.0",
        "@types/react": "^18.3.3",
        "@typescript-eslint/eslint-plugin": "^7.16.1",
        "@typescript-eslint/parser": "^7.16.1",
        "bunchee": "^5.2.2",
        "eslint": "^9.7.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jest-dom": "^5.4.0",
        "eslint-plugin-playwright": "^1.6.2",
        "eslint-plugin-react": "^7.35.0",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-plugin-testing-library": "^6.2.2",
        "husky": "^9.1.1",
        "jest-environment-jsdom": "^29.7.0",
        "lint-staged": "^15.2.7",
        "prettier": "^3.3.3",
        "prettier-plugin-packagejson": "^2.5.1",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "turbo": "~2.0.9",
        "typescript": "5.5.3",
        "vitest": "^2.0.3"
    },
    "peerDependencies": {
        "@types/react": "*",
        "@types/react-dom": "*",
        "react": "^16.8 || ^17.0 || ^18.0",
        "react-dom": "^16.8 || ^17.0 || ^18.0"
    },
    "peerDependenciesMeta": {
        "@types/react": {
            "optional": true
        },
        "@types/react-dom": {
            "optional": true
        }
    },
    "packageManager": "pnpm@6.32.11",
    "engines": {
        "node": ">=18.x",
        "npm": ">=9.0.0"
    }
}
